<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:annotation-config />
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

		<property name="locations">
			<list>
				<value>classpath:db.properties</value>
				<value>classpath:messages.properties</value>
				<value>classpath:constants.properties</value>
			</list>

		</property>
	</bean>

	<context:component-scan base-package="com.csa.apex.secyield" />

	<!-- dataSource configuration -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="${mysql.url}" />
		<property name="username" value="${mysql.username}" />
		<property name="password" value="${mysql.password}" />
	</bean>


	<!-- jdbcTemplate uses dataSource -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Initialization for TransactionManager -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Injection for SequenceSecurityCalculationEngine -->
	<bean id="sequenceSecurityCalculationEngine"
		class="com.csa.apex.secyield.api.services.impl.engines.SequenceSecurityCalculationEngine">
		<property name="calculationEngines">
			<list>
				<bean
					class="com.csa.apex.secyield.api.services.impl.engines.CouponYieldCalculationEngine" />
				<bean
					class="com.csa.apex.secyield.api.services.impl.engines.CouponIncomeCalculationEngine" />
			</list>
		</property>

	</bean>

	<!-- Injection for YtmYieldCalculationEngine -->
	<bean id="ytmYieldCalculationEngine"
		class="com.csa.apex.secyield.api.services.impl.engines.YtmYieldCalculationEngine">
		<property name="calculationStep">
			<value>0.01</value>
		</property>
		<property name="binarySearchCount">
			<value>30</value>
		</property>
		<property name="ephsilon">
			<value>0.000000001</value>
		</property>
		<property name="minYield">
			<value>0.0000123</value>
		</property>
	</bean>

	<!-- Injection for CalculationEngineSelector -->
	<bean id="calculationEngineSelector"
		class="com.csa.apex.secyield.api.services.impl.engines.CalculationEngineSelector">
		<property name="calculationEngines">
			<map>
				<entry>
					<key>
						<value>YTM</value>
					</key>
					<bean
						class="com.csa.apex.secyield.api.services.impl.engines.SequenceSecurityCalculationEngine">
						<property name="calculationEngines">
							<list>
								<bean
									class="com.csa.apex.secyield.api.services.impl.engines.YtmYieldCalculationEngine" />
								<bean
									class="com.csa.apex.secyield.api.services.impl.engines.YtmIncomeCalculationEngine" />
							</list>
						</property>

					</bean>

				</entry>
				<entry>
					<key>
						<value>COUPON</value>
					</key>
					<bean
						class="com.csa.apex.secyield.api.services.impl.engines.SequenceSecurityCalculationEngine">
						<property name="calculationEngines">
							<list>
								<bean
									class="com.csa.apex.secyield.api.services.impl.engines.CouponYieldCalculationEngine" />
								<bean
									class="com.csa.apex.secyield.api.services.impl.engines.CouponIncomeCalculationEngine" />
							</list>
						</property>

					</bean>

				</entry>
			</map>
		</property>
	</bean>

	<!-- Injection for SECYieldServiceImpl -->
	<bean id="secYieldServiceImpl"
		class="com.csa.apex.secyield.api.services.impl.SECYieldServiceImpl">
		<property name="calculationEngineSelector">
			<ref bean="calculationEngineSelector" />
		</property>
		<property name="restTemplate">
			<bean class="com.csa.apex.secyield.api.services.impl.MockCustomerApiServer" />
		</property>
		<property name="configuration">
			<bean class="com.csa.apex.secyield.entities.SECConfiguration" />
		</property>
		<property name="getConfigApiPath">
			<value>http://localhost:8080/getConfiguration</value>
		</property>
		<property name="getCustomerDataApiPath">
			<value>http://localhost:8080/getCustomerSECData</value>
		</property>
		<property name="saveCalculatedSecuritySECDataApiPath">
			<value>http://localhost:8080/persistSecuritySECData</value>
		</property>
		<property name="getCalculatedSecuritySECDataApiPath">
			<value>http://localhost:8080/getCalculatedSECData</value>
		</property>
	</bean>
	
</beans>